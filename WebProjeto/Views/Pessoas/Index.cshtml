@model WebProjeto.Models.PessoaViewModel

@{
    ViewData["Title"] = "Cliente";
}

<h1>Cliente</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                Código
            </th>
            <th>
                Nome Fantasia
            </th>
            <th>
                CPF/CNPJ
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Pessoas)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome_Fantasia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cnpj_Cpf)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Visualizar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
