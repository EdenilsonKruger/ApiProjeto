@model WebProjeto.Models.Pessoa

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Cliente</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label class="control-label">Código</label>
                <input readonly asp-for="Id" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Nome Fantasia</label>
                <input asp-for="Nome_Fantasia" class="form-control" />
                <span asp-validation-for="Nome_Fantasia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">CNPJ/CPF</label>
                <input readonly asp-for="Cnpj_Cpf" class="form-control" />
                <span asp-validation-for="Cnpj_Cpf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-12" style="display: contents;">
                        <div class="col-md-6">
                            <input type="submit" value="Confirmar" class="btn btn-success" />
                        </div>
                        <div class="col-md-6" style="text-align: right;">
                            <a class="btn btn-primary" style="width: 100px;" asp-action="Index">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
